@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Log In</h1>

<form asp-action="Login" method="post">
    <div class="container">
        <table class="table table-hover" style="background-color: #e9992845">
            <tr>
                <td>
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" style="width:50%" />
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input asp-for="Password" class="form-control" style="width:50%" type="password" />
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="LogIn" class="btn btn-info btn-lg formButton" />
                </td>
                <td>
                </td>
            </tr>
        </table>
        <a asp-action="Index">Back to List</a>
    </div>
</form>
