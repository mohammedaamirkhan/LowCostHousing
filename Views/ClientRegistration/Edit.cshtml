                                    @Html.RadioButton("Gender", "M", "checked")<label>Male</label>
                                    @Html.RadioButton("Gender", "F")<label>Female</label>
                                }
                                else
                                {
                                    @Html.RadioButton("Gender", "M")<label>Male</label>
                                    @Html.RadioButton("Gender", "F", "checked")<label>Female</label>
