                        <label asp-for="ClientRegistrationId" class="col-sm-2 col-form-label">Id</label>
                        <div class="col-sm-10">
                            <input asp-for="ClientRegistrationId" readonly class="form-control" />
                            <span asp-validation-for="ClientRegistrationId" class="text-danger"></span>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group form-check row">
                        <label class="form-check-label">
                            @{
                                if (Model.TypeOfOwnership == true)
                                {
                                    <input type="checkbox" checked="checked" value="true" asp-for="TypeOfOwnership"><label class="form-check-label"> Joint </label>
                                    <input type="checkbox" value="false" asp-for="TypeOfOwnership"><label class="form-check-label"> Individual </label>
                                }
                                else
                                {
                                    <input type="checkbox" value="true" asp-for="TypeOfOwnership"><label class="form-check-label"> Joint </label>
                                    <input type="checkbox" checked="checked" value="false" asp-for="TypeOfOwnership"><label class="form-check-label"> Individual </label>
                                }
                            }
                        </label>
                    </div>
                </td>
            </tr>
